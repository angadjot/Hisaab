<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layUser"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <FrameLayout
                android:id="@+id/frmQueue"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imgContact"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    fresco:backgroundImage="@color/colorPrimaryDark"
                    fresco:placeholderImage="@drawable/icon_placeholder"
                    fresco:placeholderImageScaleType="fitCenter"
                    fresco:roundAsCircle="true" />

                <Button
                    android:id="@+id/imgUserButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:visibility="gone" />


            </FrameLayout>

            <ImageView
                android:id="@+id/imgCheckedImage"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/contact_selected"
                android:contentDescription="@string/app_name" />

            <CheckBox
                android:id="@+id/imgQueueMultiSelected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:buttonTint="#00ffffff"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:scaleType="fitCenter" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtContactName"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:maxLines="2"
            android:singleLine="false"
            android:textColor="@color/darkgray"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>
